@page
@model LoginModel

@{
    ViewData["Title"] = "LOGIN";
}
<style>
    .btn-red-orange {
        background-color: #ff5733; /* Red-orange color */
        color: #fff; /* Text color */
        border-color: #ff5733; /* Border color (same as background color) */
    }
</style>

<div style="text-align: center;">
    <h1 class="mt-5">@ViewData["Title"]</h1>
</div>
<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="border p-4 mb-4">
                <form id="account" method="post">
                    <h2>Use a local account to login</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-red-orange">Log in</button>
                    </div>
                </form>
            </section>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" style="font-size: smaller; text-decoration: underline;">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="font-size: smaller; text-decoration: underline;">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="font-size: smaller; text-decoration: underline;">Resend email confirmation</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
