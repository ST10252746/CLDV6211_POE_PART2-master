@{
    ViewData["Title"] = "Contact Us";
}

<section class="slick-slideshow">
    <div class="slick-custom">
        <img src="~/images/slideshow/h1.jpg" class="img-fluid" alt="">
        <div class="slick-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-10">
                        <h1 class="slick-title text-primary">Get In</h1>
                        <h1 class="slick-title white-text">Contact With Us</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="contact section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-12">
                <h2 class="mb-4"><span>Have a question or just want to say hello?</span></h2>
                <h2 class="mb-4"><span class="black-text">We'd love to hear from you!</span></h2>

                <p>
                    Get In Touch
                </p>
                <p>
                    Have a question about our products or services?
                    Want to learn more about KhumaloCraft Emporium?
                    We're here to help!
                    Reach out to our team for assistance, feedback, or inquiries.
                </p>
                <p>
                    Customer Support
                </p>
                <p>
                    Need assistance with an order or have a product-related question?
                    Our customer support team is ready to assist you.
                    Contact us via phone, email, or visit us at our workplace address for personalized assistance.
                </p>
                <p>
                    Collaborate with Us

                </p>
                <p>
                    Interested in partnering with KhumaloCraft or featuring your products on our platform?
                    We love collaborating with like-minded brands and artisans.
                    Get in touch to explore partnership opportunities.
                </p>
            </div>

            <div class="col-lg-5 col-12 mt-5 ms-auto">
                <div class="row">
                    <div class="col-7 contact-info">
                        <h6 class="mb-3">Studio Email</h6>

                        <p style="color: #FFA500;">khumalocraft@gmail.com</p>
                    </div>

                    <div class="col-7 contact-info">
                        <h6 class="mb-3">Call Us: Contact info</h6>

                        <p style="color: #FFA500;">+27 83 455 2341</p>
                    </div>

                    <div class="col-7 border-top  contact-info">
                        <h6 class="mb-3">Our Office</h6>

                        <p style="color: #FFA500;">34 Bangtan Street, Durban, South Africa</p>
                    </div>

                    <style>
                        .orange-text {
                            color: #FFA500; /* Tiger orange color */
                        }

                        .black-text {
                            color: black;
                        }
                    </style>

                    <div class="col-7 border-top contact-info">
                        <h6 class="mb-3">Our Socials</h6>

                        <ul class="social-icon">
                            <li><a href="#" class="social-icon-link bi-messenger  orange-text"></a></li>
                            <li><a href="#" class="social-icon-link bi-youtube  orange-text"></a></li>
                            <li><a href="#" class="social-icon-link bi-instagram  orange-text"></a></li>
                            <li><a href="#" class="social-icon-link bi-whatsapp  orange-text"></a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
